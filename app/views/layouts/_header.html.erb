<header class="page-header">
    <div>
      <nav>
        <ul>
          <% if logged_in? %>
            <li>
              <ul>
                <li><%= @current_user.nome %></li>
                 <li><%= @current_user.cargo %></li>
                <li>
                  <%= link_to "Log out", sign_out_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Log in", root_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>