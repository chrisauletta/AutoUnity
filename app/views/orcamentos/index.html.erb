<p id="notice"><%= notice %></p>

<h1>Orcamentos</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Quilometragem</th>
      <th>Valor total</th>
      <th>Descricao</th>
      <th>Cliente</th>
      <th>Veiculo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orcamentos.each do |orcamento| %>
      <tr>
        <td><%= orcamento.status %></td>
        <td><%= orcamento.quilometragem %></td>
        <td><%= orcamento.valor_total %></td>
        <td><%= orcamento.descricao %></td>
        <td><%= orcamento.cliente %></td>
        <td><%= orcamento.veiculo %></td>
        <td><%= link_to 'Show', orcamento %></td>
        <td><%= link_to 'Edit', edit_orcamento_path(orcamento) %></td>
        <td><%= link_to 'Destroy', orcamento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

