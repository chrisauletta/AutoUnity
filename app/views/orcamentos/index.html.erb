<p id="notice"><%= notice %></p>

<h1>Orcamentos</h1>
<div class="box pattern pattern-sandstone">

    <div class="box-header">
       <i class="icon-table"></i>
        <h5>
        Relaçao de Peças
        </h5>
    </div>

    <div class="box-content">
    <div class="row">
 
      <div class="span14">
         <%= form_tag(pega_orc_path, method: :get, :remote => true) do %>
          <div class="form-inline"> 
          <%= select(:orcamento, :selec, [ 'nome','placa'], {include_blank: true}) %>
          <%= text_field_tag :nome %>
          <%= label_tag :status %>
          <%= select(:orcamento, :status, [ 'Pendente','Cotaçao','placa'], {include_blank: true}) %>

          <%= submit_tag "Encontrar"%>
          </div>
    <% end %>
<table id="table_index">
  <thead>
    <tr>
      <th class="span2", onclick="sortTable(0)">Status</th>
      <th class="span3">Cliente</th>
      <th class="span2">Veiculo</th>
      <th class="span2">Placa</th>
      <th class="span2">Quilometragem</th>
      <th class="span2">Valor total</th>
      <th class="span4"></th>
    </tr>
  </thead>

  <tbody>

  </tbody>
</table>
</div><!-- Fecha span14-->
</div><!-- Fecha row-->
</div><!-- Fecha box content-->
</div><!-- Fecha box-->

<br>

