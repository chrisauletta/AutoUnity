<div id="modalStatusOrcamento" class="modal hide fade modal-lg" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">

    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Status Orcamento</h3>
  </div>
  <div class="modal-body">

<%= form_tag(status_orcamento_path(orc), method: :post, :remote => true) do %>


<div class="field">
    Status Atual: <%=orc.status%>
    </br>
    </br>    
    <%= select(:orcamento, :status, [ '1. Analise','2. Aguardando Cotação','3. Aguardando Aprovação', '4. Reprovado', '5. Aprovado', '6. Aguardando Fornecedor','7. Em manutenção', '8. Teste', '9. Finalisado', '10. Aguardando Pagamento']) %>
  </div>

      <%= submit_tag "Editar"%>
<%end%>

</div>