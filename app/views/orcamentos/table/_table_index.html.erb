<% orcamentos.each do |orcamento| %>
      <tr>
        <td class="span2"><%= orcamento.status %></td>
        <td class="span3"><%= orcamento.cliente.nome %></td>
        <td class="span2"><%= orcamento.veiculo.marca %></td>
        <td class="span2"><%= orcamento.veiculo.placa %></td>
        <td class="span2"><%= orcamento.quilometragem %></td>
        <td class="span2"><%= orcamento.valor_total %></td>
        <td class="span4">
        <div class="btn-group">
        <button class="btn ">Funçoes</button>
        <button class="btn dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">

        <%= link_to 'Relacionar Peças', peca_orc_path(orcamento) %>
        <%= link_to 'Exibir', orcamento %>
        <%= link_to 'Editar', edit_orcamento_path(orcamento) %>
        <%= link_to 'Deletar', orcamento, method: :delete, data: { confirm: 'Are you sure?' } %>
        <%= link_to 'Editar', report_orc_path(orcamento, :format => 'pdf') %>
          
        </ul>
      </div>
        </td>

      </tr>
    <% end %>