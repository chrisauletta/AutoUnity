<!DOCTYPE html>
<html>
  <head>
    <title>Unity System</title>
            <meta charset="UTF-8"/>

    <%= csrf_meta_tags %>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

     <style>
        #body-content { padding-top: 0px;}
    </style>
  </head>

  <body>

     <div class="row">
     <div class="span6">

     <h2>Oficina Continental</h2>
     
     </div>
  <div class="span3 offset2">
  	<h3>4177-1663</h3>
  	<h3>4238-2020</h3>
  </div>
     	
     </div>

     <hr>

     <div class="row">
<div class="span14">
<div class="form-inline">
Nome:
<span class="input-large uneditable-input"><%=@orcamento.cliente.nome%></span>
Telefone:
<span class="input-large uneditable-input"><%=@orcamento.cliente.telefone%></span>
Celular:
<span class="input-large uneditable-input"><%=@orcamento.cliente.celular%></span>
</div>
<div class="form-inline">
Placa:
<span class="input-large uneditable-input"> <%=@orcamento.veiculo.placa%> </span>
Marca:
<span class="input-large uneditable-input"><%=@orcamento.veiculo.marca%></span>
Modelo:
<span class="input-large uneditable-input"><%=@orcamento.veiculo.modelo%></span>
</div>
</div>
</div>

<div class="row">
  <div class="box pattern pattern-sandstone">

    <div class="box-header">
       <i class="icon-table"></i>
        <h5>
        Rela√ßao de Pecas
        </h5>
    </div>

    <div class="box-content">
    <div class="row">
      <div class="span14">
      <table class="table table-hover">
          <thead>
            <tr>
              <th class="span3">Nome</th>
              <th class="span3">quantidade</th>
              <th class="span3">Fabricante</th>
              <th class="span2">Preco</th>
            </tr>
          </thead>

          <tbody>
              <% @orcamento.peca_orc.each do |peca_orc| %>

                <tr>
                <td class="span3"><%= peca_orc.peca.nome %></td>
                <td class="span3"><%= peca_orc.peca.fabricante %></td>
                <td class="span3"><%= peca_orc.quantidade %></td>
                <td class="span2"><%= peca_orc.preco_o %></td>
  <td><%= link_to 'Deletar', peca_orc, method: :delete, data: { confirm: 'Are you sure?' } %></td>

              </tr>

              <%end%>
          </tbody>
        </table>
        </div>
        </div>
    </div>

  </div>
</div>


  </body>

</html>
