<div class="span16">
<p id="notice"><%= notice %></p>

<div class="box pattern pattern-sandstone">

    <div class="box-header">
       <i class="icon-table"></i>
        <h5>
        Veiculo
        </h5>
    </div>

    <div class="box-content">
    <div class="row">
    <div class="span15">

<%= form_tag(pega_cliente_path, method: :get, :remote => true) do %>
          <div class="form-inline"> 
          <%= label_tag :nome %>
          <%= text_field_tag :nome_c %>
          <%= submit_tag "Encontrar"%>
          </div>
<% end %>

<table>
  <thead>
    <tr>
      <th class="span3">Placa</th>
      <th class="span3">Marca</th>
      <th class="span3">Modelo</th>
      <th class="span3">Ano</th>
      <th class="span3">Cor</th>
      <th class="span5"></th>
    </tr>
  </thead>

  <tbody>
    <% @veiculos.each do |veiculo| %>
      <tr>
        <td class="span3"><%= veiculo.placa %></td>
        <td class="span3"><%= veiculo.marca %></td>
        <td class="span3"><%= veiculo.modelo %></td>
        <td class="span3"><%= veiculo.ano %></td>
        <td class="span3"><%= veiculo.cor %></td>
        <td class="span5"><%= link_to 'Exibir', veiculo, class:"btn btn-small  btn-default" %>
        <%= link_to 'Editar', edit_veiculo_path(veiculo), class:"btn btn-small  btn-primary" %>
        <%= link_to 'Deletar', veiculo, method: :delete, data: { confirm: 'Tem certeza' },class:"btn btn-small  btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
</div>

<br>

<%= link_to 'Novo Veiculo', new_veiculo_path, class:"btn btn-primary" %>
</div>